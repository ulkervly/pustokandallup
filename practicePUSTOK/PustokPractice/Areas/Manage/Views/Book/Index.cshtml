@model List<Book>
@{
    int counter = 0;
}

<div class="container-fluid">
    <div class="row justify-content-between align-items-center">
        <h1>Books:</h1>
        <a class="btn btn-primary" asp-action="create" asp-controller="book">Create</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">No</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">SalePrice</th>
                <th scope="col">CostPrice</th>
                <th scope="col">DiscountPercent</th>
                <th scope="col">IsAvailable</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                counter++;
                <tr>
                    <th scope="row">@counter</th>
                    <td>@book.Name</td>
                    <td>@book.Description</td>
                    <td>@book.Saleprice</td>
                    <td>@book.Costprice</td>
                    <td>@book.DiscountPercent</td>
                    <td>@book.IsAvailable</td>

                    
                    <td>
                        <a asp-action="update" asp-controller="book" asp-route-id="@book.id" class="btn btn-warning">Update</a>
                        <a asp-action="delete" asp-controller="book" asp-route-id="@book.id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
